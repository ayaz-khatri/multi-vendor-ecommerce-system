<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800"><%= title %></h1>
        <div class="ml-auto">
          <a href="/vendor/products/create" class="btn btn-outline-primary btn-sm mt-1">Add New</a>
          <a href="/vendor/products/trashed" class="btn btn-outline-primary btn-sm mt-1">Trashed</a>
        </div>
    </div>

    <!-- Content Row -->
    <div class="row">
        <div id="crudTable" class="w-100 text-dark table-sm"></div>
    </div>

</div>
<!-- /.container-fluid -->

<%- include('../../partials/deleteModal.ejs') %>

<script src="/js/tabulator.min.js"></script>
<script type="module">
    import { initTabulator } from "/js/tabulator-helper.js";

    const tableData = <%- JSON.stringify(products || []) %>;

    const columns = [
        { title: "S.No.", formatter: "rownum", width: 50, hozAlign: "center", headerSort: false },
        { title: "Image", field: "images[0]", formatter: function(cell, formatterParams) {
            const image = cell.getValue();
            const imgSrc = image ? '/uploads/products/' + images : '/img/placeholder.png';
            return `<img src="${imgSrc}" alt="Icon" class="w-50 border border-2 border-secondary rounded shadow">`;
        }, hozAlign: "center", headerSort: false, width: 100 },
        { title: "Name", field: "name", headerFilter: "input" },
        { title: "Shop", field: "shopId.name", headerFilter: "input" },
        { title: "Slug", field: "slug", headerFilter: "input" },
        { title: "Price", field: "price", headerFilter: "input" },
        { title: "Stock", field: "stock", headerFilter: "input" },
        { title: "Status", field: "status", headerFilter: "input", formatter: function(cell, formatterParams) {
            const status = cell.getValue();
            if (status == "active") {
                return `<span class="badge badge-success">Active</span>`;
            }  else {
                return `<span class="badge badge-warning">Inactive</span>`;
            }
        }},
        { title: "Created", field: "createdAt" },
        { title: "Updated", field: "updatedAt" }
    ];

    function actionsTemplate(rowData) {
        return `
            <a href="/vendor/products/view/${rowData._id}" class="btn btn-sm btn-primary text-white" title="View"><i class="fas fa-eye"></i></a>
            <a href="/vendor/products/edit/${rowData._id}" class="btn btn-sm btn-success text-white mx-1" title="Edit"><i class="fas fa-edit"></i></a>
            <button onclick="openModal('${rowData._id}')" class="btn btn-sm btn-danger" title="Delete"><i class="fas fa-trash"></i></button>
        `;
    }

    // Initialize table with deleteUrl
    initTabulator({
        tableId: "#crudTable",
        data: tableData,
        columns,
        actions: actionsTemplate,
        url: "/vendor/products"
    });

</script>

<%- contentFor('tabulatorCSS') %>
<link rel="stylesheet" href="/css/tabulator_bootstrap5.min.css" />
<link rel="stylesheet" href="/css/tabulator-custom.css" />




