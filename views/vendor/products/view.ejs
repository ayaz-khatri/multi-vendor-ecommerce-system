<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800"><%= title %></h1>
        <div class="ml-auto">
            <a href="/vendor/products" class="btn btn-outline-primary btn-sm mt-1">Products</a>
            <a href="/vendor/products/trashed" class="btn btn-outline-primary btn-sm mt-1">Trashed</a>
        </div>
    </div>

    <!-- Content Row -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Details</h6>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col">
                    <table class="table table-striped">
                        <tbody>
                            <tr>
                                <th>Status</th>
                                <td>
                                    <% if (product.status === 'active') { %>
                                        <span class="badge badge-success">Active</span>
                                    <% } else { %>
                                        <span class="badge badge-warning">Inactive</span>
                                    <% } %>
                                </td>
                            </tr>

                            <tr>
                                <th>Slug</th>
                                <td><%= product.slug %></td>
                            </tr>

                            <tr>
                                <th>Category</th>
                                <td><%= product.categoryId.name %></td>
                            </tr>

                            <tr>
                                <th>Shop</th>
                                <td><%= product.shopId.name %></td>
                            </tr>

                            <tr>
                                <th>Price</th>
                                <td><%= product.price %></td>
                            </tr>

                            <tr>
                                <th>Discount</th>
                                <td><%= product.discountPrice || '—' %></td>
                            </tr>

                            <tr>
                                <th>SKU</th>
                                <td><%= product.sku %></td>
                            </tr>

                            <tr>
                                <th>Stock</th>
                                <td><%= product.stock %></td>
                            </tr>

                            <% if (product.attributes && product.attributes.length > 0) { %>
                                <tr>
                                    <th>Attributes</th>
                                    <td>
                                        <% product.attributes.forEach(attr => { %>
                                            <div>
                                                <strong><%= attr.key %>:</strong> <%= attr.value %>
                                            </div>
                                        <% }) %>
                                    </td>
                                </tr>
                            <% } %>

                            <tr>
                                <th>Description</th>
                                <td><%= product.description || '—' %></td>
                            </tr>

                            <tr>
                                <th>Created At</th>
                                <td>
                                    <%= product.createdAt.toDateString() %>
                                    <small class="text-muted">
                                        (<%= timeAgo(product.createdAt) %>)
                                    </small>
                                </td>
                            </tr>

                            <tr>
                                <th>Updated At</th>
                                <td>
                                    <%= product.updatedAt.toDateString() %>
                                    <small class="text-muted">
                                        (<%= timeAgo(product.updatedAt) %>)
                                    </small>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <p><strong>Images:</strong></p>
                    <div class="row">
                        <% product.images.forEach(image => { %>
                            <div class="col-md-3">
                                <img src="/uploads/products/<%= image %>" alt="Image" class="mb-3 w-100 border border-3 border-secondary rounded shadow">
                            </div>
                        <% }) %>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--/Form -->

</div>
<!-- /.container-fluid -->

