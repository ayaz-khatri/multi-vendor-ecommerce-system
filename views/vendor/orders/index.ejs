<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800"><%= title %></h1>
        <div class="ml-auto">
          <!-- <a href="/vendor/shops/create" class="btn btn-outline-primary btn-sm mt-1">Add New</a>
          <a href="/vendor/shops/trashed" class="btn btn-outline-primary btn-sm mt-1">Trashed</a> -->
        </div>
    </div>

    <!-- Content Row -->
    <div class="row">
        <div id="crudTable" class="w-100 text-dark table-sm"></div>
    </div>

</div>
<!-- /.container-fluid -->

<script src="/js/tabulator.min.js"></script>
<script type="module">
    import { initTabulator } from "/js/tabulator-helper.js";

    const tableData = <%- JSON.stringify(orders || []) %>;

    const columns = [
        { title: "S.No.", formatter: "rownum", width: 60, hozAlign: "center", headerSort: false },
        { title: "Order No", field: "orderNumber", headerFilter: "input" },
        { title: "Items", field: "items", formatter: function (cell) {
                const items = cell.getValue();
                return items.map(item =>
                    `${item.name} Ã— ${item.quantity}`
                ).join("<br>");
            }
        },
        {
            title: "Item Status", field: "items", headerFilter: "input", hozAlign: "center", formatter: function (cell) {
                const statuses = cell.getValue().map(i => i.status);
                const unique = [...new Set(statuses)];

                let badge = "secondary";
                if (unique.includes("pending")) badge = "warning";
                if (unique.includes("confirmed")) badge = "info";
                if (unique.includes("shipped")) badge = "primary";
                if (unique.includes("delivered")) badge = "success";
                if (unique.includes("cancelled")) badge = "danger";

                return `<span class="badge badge-${badge} text-uppercase">${unique.join(", ")}</span>`;
            }
        },
        { title: "Total", field: "items", hozAlign: "center", formatter: function (cell) {
                const total = cell.getValue().reduce(
                    (sum, item) => sum + item.subtotal,
                    0
                );
                return `$${total.toFixed(2)}`;
            }
        },
        { title: "Payment", field: "paymentMethod", hozAlign: "center", formatter: function (cell) {
                return cell.getValue() === "cod"
                    ? "Cash on Delivery"
                    : "Online";
            }
        },
        { title: "Date", field: "createdAt", formatter: function (cell) {
                return new Date(cell.getValue()).toLocaleDateString();
            }
        }
    ];

    function actionsTemplate(rowData) {
        return `
            <a href="/vendor/orders/view/${rowData._id}" 
               class="btn btn-sm btn-primary text-white" title="View Order">
                <i class="fas fa-eye"></i>
            </a>
        `;
    }

    initTabulator({
        tableId: "#crudTable",
        data: tableData,
        columns,
        actions: actionsTemplate
    });
</script>


