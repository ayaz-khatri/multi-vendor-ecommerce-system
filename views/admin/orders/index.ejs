<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800"><%= title %></h1>
    </div>

    <div class="row">
        <div id="crudTable" class="w-100 text-dark table-sm"></div>
    </div>

</div>

<script src="/js/tabulator.min.js"></script>
<script type="module">
    import { initTabulator } from "/js/tabulator-helper.js";

    const tableData = <%- JSON.stringify(orders || []) %>;

    const columns = [
        { title: "#", formatter: "rownum", width: 60, hozAlign: "center" },

        { title: "Order No", field: "orderNumber", headerFilter: "input" },

        { title: "Customer", field: "userId.name", headerFilter: "input" },

        { title: "Quantity", field: "totalQuantity", hozAlign: "center" },

        {
            title: "Total",
            field: "totalPrice",
            hozAlign: "center",
            formatter: cell => `$${cell.getValue().toFixed(2)}`
        },

        {
            title: "Payment",
            field: "paymentMethod",
            hozAlign: "center",
            formatter: cell =>
                cell.getValue() === "cod" ? "COD" : "Online"
        },

        {
            title: "Payment Status",
            field: "paymentStatus",
            hozAlign: "center",
            formatter: cell => {
                const map = {
                    pending: "warning",
                    paid: "success",
                    failed: "danger",
                    refunded: "info"
                };
                return `<span class="badge badge-${map[cell.getValue()]} text-uppercase">${cell.getValue()}</span>`;
            }
        },

        {
            title: "Order Status",
            field: "overallStatus",
            hozAlign: "center",
            headerFilter: "select",
            headerFilterParams: {
                values: {
                    "": "All",
                    pending: "Pending",
                    partially_completed: "Partial",
                    completed: "Completed",
                    cancelled: "Cancelled"
                }
            },
            formatter: cell => {
                const map = {
                    pending: "warning",
                    partially_completed: "info",
                    completed: "success",
                    cancelled: "danger"
                };
                return `<span class="badge badge-${map[cell.getValue()]} text-uppercase px-3">${cell.getValue()}</span>`;
            }
        },

        {
            title: "Date",
            field: "createdAt",
            formatter: cell => new Date(cell.getValue()).toLocaleDateString()
        }
    ];

    const actionsTemplate = row =>
        `<a href="/admin/orders/view/${row._id}" class="btn btn-sm btn-primary">
            <i class="fas fa-eye"></i>
        </a>`;

    initTabulator({
        tableId: "#crudTable",
        data: tableData,
        columns,
        actions: actionsTemplate
    });
</script>

<%- contentFor('tabulatorCSS') %>
<link rel="stylesheet" href="/css/tabulator_bootstrap5.min.css" />
<link rel="stylesheet" href="/css/tabulator-custom.css" />
