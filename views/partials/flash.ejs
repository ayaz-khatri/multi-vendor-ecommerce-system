<div id="flash-container">
    <% if (success.length) { %>
        <div class="alert alert-success alert-dismissible fade show flash-alert border border-success" role="alert">
            <%= success[0] %>
            <button class="close" type="button" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">×</span>
            </button>
        </div>
    <% } %>

    <% if (error.length) { %>
        <div class="alert alert-danger alert-dismissible fade show flash-alert border border-danger" role="alert">
            <% if (Array.isArray(error[0])) { %>
                <ul class="mb-0">
                    <% error[0].forEach(err => { %>
                        <li><%= err %></li>
                    <% }) %>
                </ul>
            <% } else { %>
                <%= error[0] %>
            <% } %>
            <button class="close" type="button" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">×</span>
            </button>
        </div>
    <% } %>
</div>
