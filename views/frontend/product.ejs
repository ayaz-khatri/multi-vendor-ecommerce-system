<!-- Breadcrumb Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30">
                <% breadcrumbs.forEach((item, index) => { %>
                    <% if (item.url && index !== breadcrumbs.length - 1) { %>
                        <a class="breadcrumb-item text-dark" href="<%= item.url %>">
                            <%= item.label %>
                        </a>
                    <% } else { %>
                        <span class="breadcrumb-item active">
                            <%= item.label %>
                        </span>
                    <% } %>
                <% }) %>
            </nav>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->


<!-- Shop Detail Start -->
<div class="container-fluid pb-5">
    <div class="row px-xl-5">
        <div class="col-lg-5 mb-30">
            <div id="product-carousel" class="carousel slide product-carousel" data-ride="carousel">
                <div class="carousel-inner bg-light">

                    <% if (product.images && product.images.length > 0) { %>
                        <% product.images.forEach((image, index) => { %>
                            <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                                <img 
                                    class="carousel-img"
                                    src="<%= (image && image.url) ? image.url : '/img/placeholder.png' %>" 
                                    alt="<%= product.name %>">
                            </div>
                        <% }); %>
                    <% } else { %>
                        <div class="carousel-item active">
                            <img class="carousel-img" src="/img/placeholder.png" alt="<%= product.name %>">
                        </div>
                    <% } %>

                </div>

                <a class="carousel-control-prev" href="#product-carousel" data-slide="prev">
                    <i class="fa fa-2x fa-angle-left text-dark"></i>
                </a>
                <a class="carousel-control-next" href="#product-carousel" data-slide="next">
                    <i class="fa fa-2x fa-angle-right text-dark"></i>
                </a>
            </div>
        </div>

        <div class="col-lg-7 h-auto mb-30">
            <div class="h-100 bg-light p-30">
                <h3><%= product.name %></h3>
                <div class="d-flex mb-3">
                    <div class="text-primary mr-2">
                        <% 
                            const fullStars = Math.floor(product.avgRating); // Number of full stars
                            const halfStar = product.avgRating - fullStars >= 0.5; // Half star if needed
                            const emptyStars = 5 - fullStars - (halfStar ? 1 : 0); // Remaining empty stars
                        %>

                        <% for(let i = 0; i < fullStars; i++) { %>
                            <small class="fas fa-star text-primary"></small>
                        <% } %>

                        <% if (halfStar) { %>
                            <small class="fas fa-star-half-alt text-primary"></small>
                        <% } %>

                        <% for(let i = 0; i < emptyStars; i++) { %>
                            <small class="far fa-star text-primary"></small>
                        <% } %>
                    </div>
                    <small class="pt-1">(<%= reviewCount %>)</small>
                </div>
                <div class="d-flex mb-3">
                    <% if(product.stock > 0) { %>
                        <small class="text-success">In Stock</small>
                    <% } else { %>
                        <small class="text-danger">Out of Stock</small>
                    <% } %>
                </div>
                <h3 class="font-weight-semi-bold mb-4">$<%= product.price %></h3>
                <p class="mb-4"><%= product.description %></p>

                <% if (product.attributes && product.attributes.length > 0) { %>
                    <table class="table table-striped table-sm">
                    <% product.attributes.forEach((attribute) => { %>
                        <tr>
                            <td><strong><%= attribute.key %></strong></td>
                            <td><%= attribute.value %></td>
                        </tr>
                    <% }); %>
                    </table>
                <% } %>
                <hr>
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <span>Category</span><br>
                        <a href="/category/<%= product.categoryId.slug %>"><%= product.categoryId.name %></a>
                    </div>
                    <div class="col-md-4 mb-3 text-md-center">
                        <span>Vendor</span><br>
                        <a href="/vendors/<%= product.vendorId.id %>"><%= product.vendorId.name %></a>
                    </div>
                    <div class="col-md-4 mb-3 text-md-right">
                        <span>Shop</span><br>
                        <a href="/shop/<%= product.shopId.slug %>"><%= product.shopId.name %></a>
                    </div>
                </div>
                <div class="d-flex pt-2">
                    <strong class="text-dark mr-2">Share on:</strong>
                    <div class="d-inline-flex">
                        <a class="text-dark px-2" href="">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a class="text-dark px-2" href="">
                            <i class="fab fa-twitter"></i>
                        </a>
                        <a class="text-dark px-2" href="">
                            <i class="fab fa-linkedin-in"></i>
                        </a>
                        <a class="text-dark px-2" href="">
                            <i class="fab fa-pinterest"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row px-xl-5">
        <div class="col">
            <div class="bg-light p-30">
                <div class="nav nav-tabs mb-4">
                    <a class="nav-item nav-link text-dark active" data-toggle="tab" href="#tab-pane-1">Description</a>
                    <a class="nav-item nav-link text-dark" data-toggle="tab" href="#tab-pane-2">Information</a>
                    <a class="nav-item nav-link text-dark" data-toggle="tab" href="#tab-pane-3">Reviews (<%= reviewCount %>)</a>
                </div>
                <div class="tab-content">
                    <div class="tab-pane fade show active" id="tab-pane-1">
                        <h4 class="mb-3">Product Description</h4>
                        <p><%= product.description %></p>
                    </div>
                    <div class="tab-pane fade" id="tab-pane-2">
                        <h4 class="mb-3">Additional Information</h4>
                        <% if (product.attributes && product.attributes.length > 0) { %>
                            <table class="table table-striped table-sm">
                            <% product.attributes.forEach((attribute) => { %>
                                <tr>
                                    <td><strong><%= attribute.key %></strong></td>
                                    <td><%= attribute.value %></td>
                                </tr>
                            <% }); %>
                            </table>
                        <% } else { %>
                            <p>No additional information available.</p>
                        <% } %>
                    </div>
                    <div class="tab-pane fade" id="tab-pane-3">
                        <div class="row">
                            <div class="col">
                                <h4 class="mb-4"><%= reviewCount %> review for "<%= product.name %>"</h4>
                                <% reviews.forEach(review => { %>
                                <div class="media mb-4 border-bottom pb-1">
                                    <img src="<%= (review.userId.profilePic && review.userId.profilePic.url) ? review.userId.profilePic.url : '/img/placeholder.png' %>" alt="User Image" class="img-fluid mr-3 mt-1" style="width: 45px;">
                                    <div class="media-body">
                                        <!-- User Name and Review Date -->
                                        <h6>
                                            <%= review.userId.name %> 
                                            <small class="text-muted"> - <i><%= review.createdAt.toLocaleDateString('en-US', { day: '2-digit', month: 'short', year: 'numeric' }) %></i></small>
                                        </h6>

                                        <!-- Dynamic Star Rating -->
                                        <div class="text-primary mb-2">
                                            <% for(let i = 1; i <= 5; i++) { %>
                                                <% if (i <= review.rating) { %>
                                                    <i class="fas fa-star"></i>
                                                <% } else { %>
                                                    <i class="far fa-star"></i>
                                                <% } %>
                                            <% } %>
                                        </div>

                                        <!-- Review Comment -->
                                        <p><%= review.comment %></p>

                                        <!-- Vendor Reply (if exists) -->
                                        <% if (review.vendorReply) { %>
                                            <div class="ml-4 p-2 border-left border-primary">
                                                <strong>Vendor Reply:</strong>
                                                <p class="mb-0"><%= review.vendorReply %></p>
                                            </div>
                                        <% } %>
                                    </div>
                                </div>
                                <% }) %>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Shop Detail End -->


